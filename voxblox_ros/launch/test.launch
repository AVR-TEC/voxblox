<?xml version="1.0" encoding="ISO-8859-15"?>
<launch>

  <arg name="bag_path" default="/media/zac/Windows8_OS/Datasets/Desk/RS_d2_30Hz.bag" />
  <arg name="calib_path" default="/media/zac/Windows8_OS/Datasets/Desk/d_calibRS.yaml" />

  <param name="/use_sim_time" value="true" />

  <node pkg="rosbag" type="play" name="rosbagPlay" output="screen" args="-l --clock $(arg bag_path)">
  </node>

  <rosparam file="$(arg calib_path)"/>

  <node name="sdco_node" pkg="sdco" type="sdco_node" output="screen" clear_params="true">
    <remap from="image" to="camera/color/image_raw"/>
    <remap from="depth" to="camera/depth/image_raw"/>
    <param name="cam_ns" value="rgb" />
  </node>

  <node name="voxblox_node" pkg="voxblox_ros" type="voxblox_node" output="screen" args="--alsologtostderr" clear_params="true">
    <remap from="pointcloud" to="camera/depth/points"/>
    <param name="tsdf_voxel_size" value="0.02" />
    <param name="truncation_distance" value="0.1" />
    <param name="tsdf_voxels_per_side" value="16" />
    <param name="voxel_carving_enabled" value="true" />
    <param name="color_mode" value="color" />
    <param name="use_tf_transforms" value="false" />
    <remap from="transform" to="/depth_cam_rel_tform" />
    <param name="update_mesh_every_n_sec" value="1.0" />
    <param name="verbose" value="true" />
    <param name="min_time_between_msgs_sec" value="0.2" />
    <param name="mesh_min_weight" value="5" />
    <prama name="mesh_filename" value="/media/zac/Windows8_OS/Datasets/out.ply" />

    <rosparam file="$(find voxblox_ros)/cfg/test.yaml"/>

    <param name="mesh_filename" value="$(find voxblox_ros)/mesh_results/$(anon rgbd).ply" />
  </node>

</launch>
